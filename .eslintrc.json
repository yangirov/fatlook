{
    "plugins": ["prettier"],
    "extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js"],
            "rules": {
                "prettier/prettier": [
                    "error",
                    {},
                    {
                        "usePrettierrc": true
                    }
                ],
                "import/order": [
                    "error",
                    {
                        "newlines-between": "always",
                        "pathGroups": [
                            {
                                "pattern": "@/**",
                                "group": "external",
                                "position": "after"
                            }
                        ],
                        "groups": ["builtin", "external", "parent", "sibling", "index"]
                    }
                ]
            }
        }
    ]
}
