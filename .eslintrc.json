{
    "root": true,
    "plugins": ["prettier"],
    "extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js"],
            "rules": {
                "prettier/prettier": [
                    "error",
                    {},
                    {
                        "usePrettierrc": true
                    }
                ],
                "import/order": [
                    "error",
                    {
                        "groups": ["builtin", "external", "parent", "sibling", "index", "unknown"],
                        "pathGroups": [
                            {
                                "pattern": "react",
                                "group": "external",
                                "position": "before"
                            },
                            {
                                "pattern": "@/**",
                                "group": "external",
                                "position": "after"
                            },
                            {
                                "pattern": "{.,..}/*.module.scss",
                                "group": "unknown",
                                "position": "after"
                            }
                        ],
                        "pathGroupsExcludedImportTypes": ["react"],
                        "newlines-between": "always-and-inside-groups",
                        "alphabetize": {
                            "order": "asc",
                            "caseInsensitive": true
                        }
                    }
                ]
            }
        }
    ]
}
