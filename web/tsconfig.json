{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true,
        "paths": {
            "@/core/*": ["../core/*"],
            "@/mobile/*": ["../mobile/src/*"],
            "@/web/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "custom.d.ts"],
    "exclude": ["node_modules"]
}
